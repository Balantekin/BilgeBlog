
@model List<BilgeBlog.Models.VM.SiteBlogPostVM>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            @foreach (var item in Model)
            {
                <div class="post-preview">
                    <a href="/SiteBlog/Index/@item.ID">
                        <h2 class="post-title">

                            @item.Title
                            
                        </h2>
                        
                        <h3 class="post-subtitle">
                            @item.Category
                        </h3>
                    </a>
                    <p class="post-meta">
                        Posted by
                        <a href="#">Buğra Balantekin</a>
                        on @item.AddTime
                    </p>
                </div>
                <hr>
            }

            <hr>
            <!-- Pager -->
            <div class="clearfix">
                <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
            </div>
        </div>
    </div>
</div>
