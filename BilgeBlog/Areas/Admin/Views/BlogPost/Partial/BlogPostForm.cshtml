@model BilgeBlog.Areas.Admin.Models.DTO.BlogPostVM

    <script src="~/ckeditor5-build-classic/ckeditor.js"></script>


@using (Html.BeginForm())
{
<form>

    <div class="form-group">

        @Html.LabelFor(x => x.Title)
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Başlık" })


    </div>

    <div class="form-group">
        <label> Kategori </label>
        @Html.DropDownList("CategoryID", Model.DropdownCategories, "Lütfen Seçim Yapınız", new { @class = "form-control" })

    </div>


    <div class="form-group">
        @Html.LabelFor(x => x.Content)
        @Html.TextAreaFor(x => x.Content, new { @class = "form-control", @placeholder = "İçerik", @id = "CKeditor" })
        @Html.ValidationMessageFor(x => x.Content)

    </div>

    


    <button type="submit" class="btn btn-primary">Kaydet</button>

</form>
}
