
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Blog Listeleme Ekranı</h2>


@model List<BilgeBlog.Areas.Admin.Models.DTO.BlogPostVM>



<!-- Page level plugins -->
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap4.min.js"></script>
<link href="~/Scripts/dataTables.bootstrap4.min.css" rel="stylesheet" />

<!-- Page level custom scripts -->
<script src="~/Scripts/datatables-demo.js"></script>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });</script>

<script>
    function Delete(id) {
        $.ajax({
            url: "/Admin/Category/DeleteCategory/" + id,
            type:"POST",
            success: function (result) {
                $("#a_"+ id).fadeOut();
            }

            //ikinci yol
            //data:id,
        })
    }
</script>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kategori </th>
                            <th>Başlık</th>
                            <th>İşlem</th>
                            <th>Güncelle</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Kategori </th>
                            <th>Başlık</th>
                            <th>İşlem</th>
                            <th>Güncelle</th>

                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="a_@item.ID">
                                <td>@item.ID</td>
                                <td>@item.CategoryName</td>
                                <td>@item.Title</td>
                                <td><i class="fas fa-trash" style="cursor:pointer" onclick="Delete(@item.ID)"></i></td>
                                <td><a href="/Admin/BlogPost/UpdateBlogPost/@item.ID"> Güncelle </a></td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>


</div>
